{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx", // Move this inside "compilerOptions"
    "module": "ESNext", // Set to a compatible module system
    "target": "ES2020", // Ensure the target is compatible with the module system
    "moduleResolution": "node" // Use "node" for better compatibility with Vite
  }
}
